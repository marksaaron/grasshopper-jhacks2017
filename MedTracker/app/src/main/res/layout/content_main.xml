<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.example.aaron.medtracker.MainActivity">

    <Button
        android:text="Turn off alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarm_off"
        android:layout_alignBottom="@+id/alarm_on"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Turn on alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:id="@+id/alarm_on"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="146dp" />

    <Button
        android:text="I took my medicine!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restart"
        android:layout_below="@+id/alarm_on"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:text="Alarm State"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/updateAlarm"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/restart"
        android:layout_toRightOf="@+id/alarm_on"
        android:layout_toEndOf="@+id/alarm_on" />

    <EditText
        android:ems="10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inputnumber"
        android:inputType="number"
        android:hint="How many hours?"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/restart"
        android:layout_alignStart="@+id/restart" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/inputnumber"
        android:layout_alignEnd="@+id/inputnumber"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="46dp"
        android:id="@+id/med_name"
        android:hint="Name of Medicine" />

</RelativeLayout>
